<h1>Edit task</h1>

<%= form_with model: @task do |f| %>
<div>
<%= f.label :title %>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :details %>
<%= f.text_field :details %>
</div>
<div>
<% if @task.completed == false %>
<input type="checkbox">Completed</input>
<% end %>
</div>
<%= f.submit %>
<% end %>

<%= @task.completed %>
<%= link_to "🔁Back to list" , tasks_path%>
